<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_bubble_received"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/txtReceivedMessage"
            android:maxWidth="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textIsSelectable="true"
            android:text="Message"
            android:inputType="textNoSuggestions|textMultiLine"
            android:linksClickable="true"
            android:textColorLink="@color/purple_700"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/receivedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_alignBottom="@id/txtReceivedMessage"
            android:layout_toRightOf="@id/txtReceivedMessage"
            android:textColor="@color/faint"
            android:textSize="13sp"
            android:paddingRight="5dp"
            />

    </RelativeLayout>

</RelativeLayout>